@model HomeModel

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">Welcome</h1>

<p>Please input a sequence of numbers to find out which ones are present three times.</p>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Input" class="control-label" placeholder="[1,3,2,3,4,3,5]">Input</label>
        <div class="input-group">
            <input asp-for="Input" class="form-control" />
            <div class="input-group-prepend">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <span asp-validation-for="Input" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Output" class="control-label">Output</label>
        <input asp-for="Output" class="form-control" readonly="readonly" />
    </div>
</form>
